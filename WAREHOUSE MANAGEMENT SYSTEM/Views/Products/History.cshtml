@model List<string>


@{
    ViewData["Title"] = "History";
}
<h1 class="text-center text-white">Lịch sử thay đổi sản phẩm</h1>
<h4 class="text-white">Lịch sử thay đổi sản phẩm</h4>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>Thời gian</th>
            <th>Hành động</th>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            var parts = log.Split('|');
            if (parts.Length == 4)
            {
                <tr>
                    <td>@parts[0]</td>
                    <td>@parts[1]</td>
                    <td>@parts[2]</td>
                    <td>@parts[3]</td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="4">@log</td>
                </tr>
            }
        }
    </tbody>
</table>